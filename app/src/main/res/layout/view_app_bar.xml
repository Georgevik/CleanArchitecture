<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="56dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/app_bar_back_arrow_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:paddingEnd="0dp"
        android:paddingLeft="24dp"
        android:paddingRight="0dp"
        android:paddingStart="24dp"
        android:src="@drawable/app_bar_left_arrow"
        android:tint="@color/red"
        android:visibility="gone"/>

    <navumchyk.aliaksandr.cleanarchitecture.ui.customView.CustomFontTextView
        android:id="@+id/app_bar_title_tv"
        style="@style/CustomRedText20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:paddingBottom="8dp"
        android:paddingEnd="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingStart="24dp"
        android:paddingTop="8dp"
        app:customFont="PT_Sans_Bold.ttf"/>

</LinearLayout>