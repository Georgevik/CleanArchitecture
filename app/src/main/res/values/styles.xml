<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"  parent="Theme.AppCompat.Light.NoActionBar"/>


    <style name="CustomShadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:background">@drawable/app_bar_shadow</item>
    </style>

    <style name="CustomDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black_16</item>
    </style>

    <style name="CustomProgressDialog">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:indeterminateDrawable">@drawable/custom_progress_bar</item>
    </style>

    <style name="CustomBlackText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomBlackText16" parent="CustomBlackText">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="CustomBlackText20" parent="CustomBlackText">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="CustomRedText20">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
